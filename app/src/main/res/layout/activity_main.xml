<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="25sp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/specific_rounded_corner"
        app:srcCompat="@drawable/img"
        app:strokeColor="#D5094E"
        app:strokeWidth="1dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="25sp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/specific_cut_corner"
        app:srcCompat="@drawable/img"
        app:strokeColor="#D5094E"
        app:strokeWidth="1dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="25sp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/specific_mix_corner"
        app:srcCompat="@drawable/img"
        app:strokeColor="#D5094E"
        app:strokeWidth="1dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="25sp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/img"
        app:strokeColor="#D5094E"
        app:strokeWidth="1dp"/>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/ic_baseline_person_outline_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:hint="name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="chars_only*"
            app:helperTextTextColor="#CA0909"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="clear_text"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:maxLength="21"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:hint="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="password*"
            app:helperTextTextColor="#CA0909"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="password_toggle"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:maxLength="21"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tryAction"
            app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:hint="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="number*"
            app:prefixText="+998 "
            app:helperTextTextColor="#CA0909"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_baseline_check_24"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_baseline_error_24"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/action"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="12"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_show"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <EditText
            android:imeOptions="actionPrevious"
            android:layout_marginBottom="15dp"
            android:id="@+id/et_listen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>